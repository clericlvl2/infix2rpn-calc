{
  "compilerOptions": {
    "target": "ES2023",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
}
